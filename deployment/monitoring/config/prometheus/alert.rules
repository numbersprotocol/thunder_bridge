groups:
- name: bridge
  rules:
    - alert: low_funds
      expr: bridge_leftTx < 100
      labels:
        severity: page
      annotations:
        summary: "Low funds warning"
        description: "\n[{{ $labels.network }}] `{{ $labels.validator }}` LEFT TX: `{{ $value }}`"

    - alert: data_missing
      expr: >-
        absent(bridge_deposits{network="home", token="NUM"}) or
        absent(bridge_deposits{network="foreign", token="NUM"})
      for: 10m
      labels:
        severity: page
      annotations:
        summary: "Missing data for 10 min."

    - alert: balance_diff
      expr: bridge_balanceDiff > 0
      for: 15m
      labels:
        severity: page
      annotations:
        summary: "Balance difference detected for token {{ $labels.token }}"

    - alert: tx_diff
      expr: >-
        bridge_deposits{network="home"} - ignoring(network) bridge_withdrawals{network="foreign"} != 0 or
        bridge_deposits{network="foreign"} - ignoring(network) bridge_withdrawals{network="home"} != 0
      for: 15m
      labels:
        severity: page
      annotations:
        summary: "Transaction count difference detected for token {{ $labels.token }}"

